<div class="navbar navbar-expand-sm navbar-light navbar">
  <div class="container-fluid">

    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://res.cloudinary.com/dqij49pio/image/upload/v1667695896/Viene%20el%20bus/icono_kblhdb_xcghxv.png" %>
    <% end %>

    <div data-controller = "suggestions-search"
    data-suggestions-search-suggestions-value = "<%= @sugestions %>"
    >
      <%= form_with url: routes_path, method: :get, html: {class: "search_bar mb-4", data: { search_route_target: "form" }, autocomplete: "off"} do %>
        <%= text_field_tag :query,
                            params[:query],
                            class: "bar",
                            placeholder: "¿Dónde quieres viajar hoy?",
                            data: {suggestions_search_target: "input"}
                            %>
        <%= image_submit_tag "https://res.cloudinary.com/dqij49pio/image/upload/v1666413182/Viene%20el%20bus/mdi_search_igzh6c.png", class: "serch "%>
      <% end %>

      <div data-suggestions-search-target = "content"
      class = "search-input-box">
        <ul data-suggestions-search-target = "results"
        class = "container-suggestions">
        </ul>
      </div>
    </div>




    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <%= link_to root_path do %>
            <li class="nav-item active">
              <%= image_tag "https://res.cloudinary.com/dqij49pio/image/upload/v1667688487/Viene%20el%20bus/Home_jum3xt.png", class: "avatar icons-small dropdown-toggle"%>
            </li>
          <% end %>

          <li class="nav-item">
            <%= image_tag "https://res.cloudinary.com/dqij49pio/image/upload/v1667688487/Viene%20el%20bus/Camapa_de_notificaciones_wompaf.png", class: "avatar icons-small dropdown-toggle" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://res.cloudinary.com/dqij49pio/image/upload/v1667688487/Viene%20el%20bus/Account_eoaxbm.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Mi perfil", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Mis rutas", favorites_path , class: "dropdown-item" %>
              <%= link_to "Cerrar sesión", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Crear cuenta", new_user_registration_path, class: "navbar-btn-yellow"%>
          </li>
            <%= link_to "Iniciar sesión", new_user_session_path, class: "navbar-btn-yellow br"%>
          </li>

        <% end %>
      </ul>
    </div>
  </div>
</div>
